  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script", // npm에서 스크립트를 실행하기 위해 "run-script" 또는 "run"을 사용합니다.
        "start:debug"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "port": 9229,
      "autoAttachChildProcesses": true
    }
  ]
}